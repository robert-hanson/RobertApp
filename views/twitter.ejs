	  	<!-- SEARCH controls --> 
	  	<form action="/twitter" method="post">
			<div class="form-group">
				<label for="search">Search</label>
				<input type="text" class="form-control" name='searchQuery' id="search">
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
 		</form>

		<!-- RESULTS --> 
		<div>
			<!-- React container --> 
			<!-- <div id="tweet_container"></div> -->

			<!-- render tweets with partials --> 
			<% if (twitterData.length == 0) { %>
				<hr/>
				<p>No results</p>
			<% } else if (twitterData.length > 0) { %>
				<hr/>
				<% for(var i=0; i < twitterData.length; i++) { %>
					<%- include("_twitterDisplay",{tweet:twitterData[i]}) %>
				<% } %>
			<% } %> 
		</div>
	</div>
</body>
</html>







